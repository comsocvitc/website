extends partials/base.pug

block content
  .site-wrap
    #particles-js
    .site-section.site-hero.inner
      .container.getintouch
        .row.align-items-center
          .col-md-10
            h1.d-block.mb-4.touch(data-aos='fade-up' data-aos-delay='100') Get in Touch
    .site-section.contactform
      .container
        .row
          .col-md-5(data-aos='fade-up')
            .success.message(
              style="margin-top: 27px;"
            ) Your message has been submitted.
            .failure.message An error occured. Please try again.
            form#contact-form(method="POST")
              .row.form-group
                .col-md-6.mb-3.mb-md-0
                  label(for='fname') First Name
                  input#fname.form-control(name='fname' type='text' required)
                .col-md-6
                  label(for='lname') Last Name
                  input#lname.form-control(name='lname' type='text')
              .row.form-group
                .col-md-12
                  label(for='email') Email
                  input#email.form-control(name='email' type='email' required)
              .row.form-group
                .col-md-12
                  label(for='subject') Subject
                  input#subject.form-control(name='subject' required)
              .row.form-group
                .col-md-12
                  label(for='message') Message
                  textarea#message.form-control(
                    name='message'
                    cols='30'
                    rows='7'
                    required
                  )
              .row.form-group
                .col-md-12
                  input#submit.btn.btn-primary.py-2.px-4.text-white.btn-dark(type='submit' value='Send Message')
          .col-md-7.ml-auto(data-aos='fade-up' data-aos-delay='100')
